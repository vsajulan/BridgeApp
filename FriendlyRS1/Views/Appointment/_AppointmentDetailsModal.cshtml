@model FriendlyRS1.ViewModels.AppointmentVM

<div class="modal fade" id="appointmentDetailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            @{
                var userId = ViewBag.UserId as int? ?? 0;
                bool isAppointer = userId == Model.AuthorId;
                bool isAppointee = userId == Model.ReceiverId;

            }
            <div class="modal-header border-0">
                <h5 class="modal-title">@Model.Title</h5>
                <span class="badge
                    @(Model.Status == AppointmentStatus.Pending ? "bg-warning text-dark" :
                      Model.Status == AppointmentStatus.Accepted ? "bg-success" :
                      Model.Status == AppointmentStatus.Cancelled ? "bg-danger" :
                      Model.Status == AppointmentStatus.Completed ? "bg-primary" :
                      Model.Status == AppointmentStatus.Rejected ? "bg-secondary" : "bg-dark")">
                    @Model.Status
                </span>
            </div>

            <div class="modal-body">
                <div class="d-flex justify-content-between">
                    <div class="appointmentDetails">
                        <p><strong>Description:</strong> @Model.Description</p>
                        <p><strong>Start:</strong> @Model.StartTime.ToString("f")</p>
                        <p><strong>End:</strong> @Model.EndTime.ToString("f")</p>
                        <p><strong>Appointer:</strong> @Model.AuthorName</p>
                        <p><strong>Appointee:</strong> @Model.ReceiverName</p>
                    </div>
                    <div class="QRCodePayment">
                        @if (Model.PaymentDetails != null)
                        {
                            <img src="~/Images/QRCodePayment.jpg"
                                 alt="QR Code"
                                 class="img-fluid border rounded shadow-sm"
                                 style="height:100%; max-height:200px; object-fit:contain;" />
                        }

                    </div>
                </div>

                @if (Model.Status == AppointmentStatus.Pending && isAppointee)
                {
                    <div class="mb-3">
                        <strong>Professional Fee</strong>
                        <input type="number" step="0.01" class="form-control" id="professionalFeeInput" placeholder="Enter professional fee" required />
                    </div>
                }

                @* Payment Details Section *@
                @if ((Model.Status == AppointmentStatus.Accepted || Model.Status == AppointmentStatus.Completed) && Model.PaymentDetails != null)
                {
                    <div class="card mt-3 shadow-sm border-0" style="background-color:#f8f9fa;">
                        <div class="card-body">
                            <h6 class="fw-bold text-primary mb-3">
                                <i class="bi bi-credit-card me-1"></i> Payment Details ( @Model.PaymentDetails.TransactionId )
                            </h6>
                            <div class="row mb-2">
                                <div class="col-sm-6">
                                    <strong>Professional Fee:</strong>
                                    <span class="text-dark">@Model.PaymentDetails.ProfessionalFee.ToString("N2")</span>
                                </div>
                                <div class="col-sm-6">
                                    @if (Model.PaymentDetails.Status == PaymentStatus.Pending && isAppointer)
                                    {
                                        <div class="d-flex align-items-center">
                                            <strong class="me-2 flex-shrink-0">Payment Method:</strong>
                                            <select id="paymentMethodSelect" class="form-select form-select-sm w-auto">
                                                <option value="">-- Choose --</option>
                                                <option value="GCash">GCash</option>
                                                <option value="Maya">Maya</option>
                                                <option value="BankTransfer">Bank Transfer</option>
                                                <option value="CreditCard">Credit Card</option>
                                                <option value="Cash">Cash</option>
                                            </select>
                                        </div>
                                    }
                                    else
                                    {
                                        <strong>Payment Method:</strong>
                                        <span>@Model.PaymentDetails.PaymentMethod</span>
                                    }
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-6">
                                    <strong>Service Fee:</strong>
                                    <span class="text-dark">@Model.PaymentDetails.ServiceFee.ToString("N2")</span>
                                </div>
                                <div class="col-sm-6">
                                    <strong>Status:</strong>
                                    @if (Model.PaymentDetails.Status == PaymentStatus.Paid)
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-6">
                                    @if (Model.PaymentDetails != null)
                                    {
                                        <strong>Total Amount:</strong>
                                        <span class="fw-bold text-success">@Model.PaymentDetails.TotalAmount.ToString("N2")</span>
                                    }
                                </div>
                                <div class="col-sm-6">
                                    @if (Model.PaymentDetails != null)
                                    {
                                        <strong>Paid At:</strong>
                                        <span>@Model.PaymentDetails.PaidAt?.ToString("f")</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="modal-footer border-0">

                @* Pending *@
                @if (Model.Status == AppointmentStatus.Pending)
                {
                    if (isAppointer)
                    {
                        <button class="btn btn-danger" onclick="cancelAppointment(@Model.Id)">Cancel Appointment</button>
                    }
                    else if (isAppointee)
                    {
                        <button class="btn btn-success" onclick="acceptAppointment(@Model.Id)">Accept</button>
                        <button class="btn btn-outline-danger" onclick="cancelAppointment(@Model.Id)">Reject</button>
                    }
                }

                @* Accepted *@
                else if (Model.Status == AppointmentStatus.Accepted)
                {
                    if (isAppointer)
                    {
                        @if (Model.PaymentDetails.Status != PaymentStatus.Paid)
                        {
                            <button class="btn btn-success" onclick="markAsPaid(@Model.Id, document.getElementById('paymentMethodSelect')?.value)">Mark as Paid</button>
                            <button class="btn btn-danger" onclick="cancelAppointment(@Model.Id)">Cancel Appointment</button>
                        }
                    }

                    if (isAppointee)
                    {
                        @if (Model.PaymentDetails.Status == PaymentStatus.Paid)
                        {
                            <button class="btn btn-primary" onclick="completeAppointment(@Model.Id)">Complete Appointment</button>
                        }
                    }
                }

                @* For all other statuses — view only *@
                else
                {
                    @* <button class="btn btn-secondary" type="button" onclick="closeAppointmentModal()">Close</button> *@
                }
            </div>
        </div>
    </div>
</div>
