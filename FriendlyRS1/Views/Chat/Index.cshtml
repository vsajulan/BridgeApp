@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    var chatList = ViewData["ChatList"] as List<FriendlyRS1.ViewModels.ChatListVM>;
    var messageList = ViewData["MessageList"] as List<FriendlyRS1.ViewModels.ChatVM>;
}

<style>
    .chat-wrapper {
        height: calc(100vh - 100px);
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        display: flex;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
    }

    /* === SIDEBAR === */
    .chat-sidebar {
        width: 320px;
        border-right: 1px solid #ddd;
        background: #f8f9fa;
        display: flex;
        flex-direction: column;
    }

    .chat-search-container {
        padding: 10px;
        border-bottom: 1px solid #ddd;
        background-color: #fff;
        position: relative;
    }

    #chat_searchInput {
        width: 100%;
        border: 1px solid #ccc;
        border-radius: 25px;
        padding: 8px 14px;
        font-size: 14px;
        outline: none;
    }

    #chat_searchDiv {
        display: none;
        position: absolute;
        top: 50px;
        left: 10px;
        right: 10px;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        max-height: 300px;
        overflow-y: auto;
        z-index: 20;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    #chat_searchResult {
        padding: 10px;
    }

    #chat_searchMore {
        display: block;
        text-align: center;
        padding: 8px;
        border-top: 1px solid #eee;
        font-size: 13px;
        color: #007bff;
        text-decoration: none;
    }

        #chat_searchMore:hover {
            text-decoration: underline;
        }

    /* Chat list inside sidebar */
    .chat-list {
        flex: 1;
        overflow-y: auto;
        padding: 5px 0;
    }

    .chat-list img,
        .chat-main img {
            margin-right: 0.5rem;
        }

    .chat-item {
        display: flex;
        align-items: center;
        padding: 10px 15px;
        border-bottom: 1px solid #eee;
        text-decoration: none;
        color: #000;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .chat-item:hover {
            background-color: #e9ecef;
        }

    .chat-avatar {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 12px;
    }

    .chat-item-details {
        flex: 1;
        min-width: 0;
    }

    .chat-item-name {
        font-weight: 600;
        font-size: 15px;
    }

    .chat-item-text {
        color: #666;
        font-size: 13px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* === CHAT PANEL === */
    .chat-main {
        flex: 1;
        background: #fafafa;
        position: relative;
        display: flex;
        flex-direction: column;
    }

    .chat-empty {
        display: flex;
        align-items: center;
        justify-content: center;
        flex: 1;
        color: #777;
        text-align: center;
        flex-direction: column;
    }

        .chat-empty img {
            width: 150px;
            opacity: 0.7;
            margin-bottom: 10px;
        }

    @@media (max-width: 768px) {
        .chat-wrapper {
            height: calc(100vh - 200px);
        }

        .chat-sidebar {
            width: 100%;
            max-width: none;
        }

        .chat-wrapper {
            flex-direction: column;
        }
    }
</style>


<div class="container-fluid mt-3">
    <div class="chat-wrapper">
        <!-- Sidebar -->
        <div class="chat-sidebar">
            <div class="chat-search-container">
                <input type="text" id="chat_searchInput" placeholder="Search user..." autocomplete="off" />
                <div id="chat_searchDiv">
                    <div id="chat_searchResult"></div>
                    <a id="chat_searchMore" class="search-more" href="/Search/Index/?q=">Search</a>
                </div>
            </div>

            <div class="chat-list">
                @await Html.PartialAsync("_ChatListPartial", chatList)
            </div>
        </div>

        <!-- Main Chat Panel -->
        <div class="chat-main" id="chat_chatMain">
            @if (messageList != null)
            {
                @await Html.PartialAsync("_ChatPanelPartial", messageList)
            }
            else
            {
                <div class="chat-empty">
                    <p>Select a conversation to start chatting</p>
                </div>
            }
        </div>
    </div>
</div>


<script>
    $(function () {
        // === Search script (unchanged) ===
        const searchInput = $("#chat_searchInput");
        const searchDiv = $("#chat_searchDiv");
        const searchResult = $("#chat_searchResult");
        const searchMore = $("#chat_searchMore");

        searchInput.on("focus input", function () {
            searchDiv.show();
            let term = searchInput.val().trim();
            if (term.length === 0) {
                searchMore.hide();
            } else {
                searchMore.show().text("Search more " + term);
            }
        });

        $(document).click(function (e) {
            if (!$(e.target).closest("#chat_searchInput, #chat_searchDiv").length) {
                searchDiv.hide();
            }
        });

        searchInput.on("keyup", function () {
            let term = searchInput.val().trim();
            if (term.length === 0) {
                searchMore.hide();
                return;
            }

            $.ajax({
                url: '/Chat/GetPeople',
                type: 'POST',
                data: { q: term },
                success: function (res) {
                    if (res && res.length) {
                        searchResult.html(res);
                    }
                    searchMore.show()
                        .attr("href", "/Chat/SearchPeople/?q=" + term)
                        .text("Search more " + term);
                }
            });
        });
    });
</script>

<script src="~/lib/microsoft-signalr/signalr.js"></script>