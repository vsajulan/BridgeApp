@{
    Layout = "_Layout";
}

<style>
    .auth-container {
        max-width: 400px;
        margin: 80px auto;
        padding: 40px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        text-align: center;
    }

    .auth-title {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .auth-icon {
        margin-bottom: 30px; 
    }

    .auth-buttons .btn {
        width: 100%;
        padding: 12px;
        font-size: 1rem;
        border-radius: 8px;
    }

    .auth-buttons a + a {
        margin-top: 15px;
    }
</style>

<div class="auth-container">
    <h1 class="auth-title">Bridge</h1>
    <img class="h-50 w-50 auth-icon" src="/Images/brand.png" alt="Alternate Text" />

    <div class="auth-buttons d-grid">
        <a id="loginBtn" class="btn btn-primary disabled" aria-disabled="true" asp-controller="Account" asp-action="Login">Log In</a>
        <a class="btn btn-secondary" asp-controller="Account" asp-action="Register">Create Account</a>
        <a id="googleBtn" class="btn btn-danger disabled" aria-disabled="true" asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google">
            <i class="fab fa-google"></i> Sign in with Google
        </a>
    </div>
    <div class="mt-3 d-flex justify-content-center">
        <div class="form-check">
            <input type="checkbox" id="agreeCheckbox" class="form-check-input" />
            <label for="agreeCheckbox" class="form-check-label" style="cursor: pointer;">
                I agree to the
                <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Terms & Conditions</a>
            </label>
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    const checkbox = document.getElementById("agreeCheckbox");
    const loginBtn = document.getElementById("loginBtn");
    const googleBtn = document.getElementById("googleBtn");

    checkbox.addEventListener("change", function () {
        if (checkbox.checked) {
            loginBtn.classList.remove("disabled");
            loginBtn.removeAttribute("aria-disabled");

            googleBtn.classList.remove("disabled");
            googleBtn.removeAttribute("aria-disabled");
        } else {
            loginBtn.classList.add("disabled");
            loginBtn.setAttribute("aria-disabled", "true");

            googleBtn.classList.add("disabled");
            googleBtn.setAttribute("aria-disabled", "true");
        }
    });
</script>

<div class="modal fade" id="termsModal" tabindex="-1" aria-labelledby="termsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="termsModalLabel">Terms and Conditions</h5>
            </div>

            <div class="modal-body">
                @await Html.PartialAsync("_TermsAndConditions")
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>